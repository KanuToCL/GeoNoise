{
  "name": "geonoise2",
  "version": "0.8.3",
  "private": true,
  "description": "Noise solver at distance - outdoor sound planning over real maps",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:clean": "npm run clean:cache && turbo dev",
    "build": "turbo build",
    "build:clean": "npm run clean:cache && turbo build --force",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:cache": "rm -rf .turbo node_modules/.cache node_modules/.vite apps/*/dist packages/*/dist apps/*/.vite packages/*/*.tsbuildinfo packages/*/tsconfig.tsbuildinfo apps/*/*.tsbuildinfo apps/*/tsconfig.tsbuildinfo && echo '✓ Caches cleared'",
    "rebuild": "npm run clean:cache && npx tsc -b --clean && npx tsc -b && echo '✓ Full rebuild complete'",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "perf:baseline": "turbo perf:baseline",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "ESLINT_USE_FLAT_CONFIG=true eslint --fix"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
