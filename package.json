{
  "name": "geonoise2",
  "version": "0.4.0",
  "private": true,
  "description": "Noise solver at distance - outdoor sound planning over real maps",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:clean": "npm run clean:cache && turbo dev",
    "build": "turbo build",
    "build:clean": "npm run clean:cache && turbo build --force",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:cache": "rm -rf .turbo node_modules/.cache node_modules/.vite apps/*/dist packages/*/dist apps/*/.vite && echo '✓ Caches cleared'",
    "rebuild": "npm run clean:cache && npx tsc -b --clean && npx tsc -b && echo '✓ Full rebuild complete'",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "perf:baseline": "turbo perf:baseline"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
